<% if @booking.is_purchased %>
  <h1>Booking is unavailable</h1> 
<% else %>

  <h1><%= @booking.inmate_name %></h1>
  <%= image_tag @booking.mugshot_url.to_s %>
  <% @charges.each do |c| %>
    <p>
      <%= c.charge_name %>
    </p>
  <% end %>

  <%= link_to "Remove mugshot", remove_booking_url(:id => @booking.id) %>
  
<% end %>  