<%= form_for(@order) do |f| %>
  <% if @order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h2>

      <ul>
      <% @order.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div id="booking_info">
    <p>
      <%= @booking.inmate_name %>
    
      <%= @booking.id %>
    </p>
  </div>
  <%= f.hidden_field :booking_id %>

  <div class="field">
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name %>
  </div>
  <div class="field">
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name %>
  </div>
  <div class="field">
    <%= f.label :card_type %><br />
    <%= f.select :card_type, options_for_select([["Visa", 'visa'], ["Mastercard", "mc"], "American Express", "amex"]) %>
  </div>
  <div class="field">
    <%= f.label :card_expires_on %><br />
    <%= f.date_select :card_expires_on %>
  </div>
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
