<h1>Listing orders</h1>

<table>
  <tr>
    <th>Booking</th>
    <th>Inmate Name</th>
    <th>Email</th>
    <th>Stripe token</th>
    <th>Is complete?</th>
    <th>Remote ip</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @orders.each do |order| %>
  <tr>
    <td><%= order.booking_id %></td>
    <td><%= order.inmate_name %> </td>
    <td><%= order.email %></td>
    <td><%= order.stripe_card_token %></td>
    <td><%= order.is_complete %></td>
    <td><%= order.remote_ip %></td>
    <td><%= link_to 'Show', order %></td>
    <td><%= link_to 'Edit', edit_order_path(order) %></td>
    <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

